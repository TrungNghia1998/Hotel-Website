
@{
    ViewBag.Title = "Danh sách dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
    <script src="/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="/Scripts/controllers/dichVuController.js"></script>
}

<div class="row">
    <div class="container">
        <div class="row">
            <button type="button" id="btnAddNew" class="btn btn-primary" style="margin-bottom:10px; margin-left:30px"> Thêm dịch vụ </button>

            <input type="text" class="form-control" id="txtNameSearch" style="margin-bottom:10px; width: 400px; margin-left:90px" placeholder="Nhập từ khóa..." />
            <select class="form-control" style="margin-left: 5px; width: 200px" id="ddlStatusSearch">
                <option value="">Tất cả</option>
                <option value="true">Đang được sử dụng</option>
                <option value="false">Đã ngưng sử dụng</option>
            </select>
            <button type="button" id="btnSearch" class="btn btn-success" style="margin-bottom:10px; width:100px; margin-left:25px">Tìm kiếm</button>
            <button type="button" id="btnReset" class="btn btn-warning" style="margin-bottom:10px; margin-left:10px">Mặc định</button>
        </div>
        
        <table class="table table-striped table-hover table-bordered" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th style="text-align:center">
                        Ảnh
                    </th>
                    <th style="text-align:center">
                        Tên dịch vụ
                    </th>
                    <th style="text-align:center; width: 180px">
                        Giá
                    </th>
                    <th style="text-align:center; width: 130px">
                        Tồn kho
                    </th>
                    <th style="text-align:center">
                        Đơn vị
                    </th>
                    <th style="text-align:center; width:56px">
                        Trạng thái
                    </th>
                    <th style="text-align:center; width:180px">
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody id="tblDataService"></tbody>
        </table>
        <div id="pagination" class="pagination" style="float:right">

        </div>
    </div>
</div>

            

   <script id="service-template" type="x-tmpl-mustache">
        <tr>
            <td style="text-align:center"><img src="{{Image}}" width="60" /></td>
            <td style="text-align:center">{{Name}}</td>
            <td style="text-align:center"><input type="number" class="txtPrice text-center form-control" data-id={{ID}} value={{Price}} /></td>
            <td style="text-align:center"><input type="number" class="txtQuantity text-center form-control" data-id={{ID}} value={{Quantity}} /></td>
            <td style="text-align:center">{{UnitPrice}}</td>
            <td style="text-align:center" class="btnStatus" data-id="{{ID}}">{{{Status}}}</td>
            <td style="text-align:center">
                <button class="btn btn-primary btnEdit" data-id="{{ID}}">Edit</button>
                <button class="btn btn-danger btnDelete" data-id="{{ID}}">Delete</button>
            </td>
        </tr>
    </script>

@RenderPage("_AddUpdateServiceModal.cshtml")
