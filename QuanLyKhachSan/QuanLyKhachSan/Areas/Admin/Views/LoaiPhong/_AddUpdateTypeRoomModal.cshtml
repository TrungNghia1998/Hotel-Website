<!-- Modal Service Boostrap -->
<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header btn-primary">
                <h4 class="modal-title">Loại Phòng</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSaveData">
                    <div class="form-group">
                        <label for="txtTypeRoom">Loại phòng:</label>
                        <input type="text" class="form-control" name="txtTypeRoom" id="txtTypeRoom">
                        <input type="hidden" id="hiddenID" value="0" />
                    </div>

                    <div class="form-group">
                        <label for="txtPrice">Giá:</label>
                        <input type="number" class="form-control" name="txtPrice" id="txtPrice">
                    </div>

                    <div class="form-group">
                        <label for="txtPercent">Tỉ lệ phụ thu:</label>
                        <input type="number" class="form-control" name="txtPercent" id="txtPercent">
                    </div>

                    <div class="form-group">
                        <label for="fileImage">Hình ảnh:</label>
                        <input type="file" class="form-control btn-primary" name="fileImage" id="fileImage">
                    </div>
                    <div id="imgPreview" class="thumbnail" style="display:none">
                        <img class="img-responsive" id="targetImage" style="width: 460px" />
                        <div class="caption" style="text-align: center">
                            <a href="#" id="clearPreview"><i class="fa fa-trash"></i></a>
                            <span id="description"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Lưu lại</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>



