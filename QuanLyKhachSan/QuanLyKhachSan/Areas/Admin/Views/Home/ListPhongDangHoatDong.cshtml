
@{
    ViewBag.Title = "Danh sách phòng đang được sử dụng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using DataProvider.Model
@model List<tblHoaDon>

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-home"></i> Danh sách phòng đang được sử dụng
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <!-- /SSS -->
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Phòng</th>
                        <th>Loại phòng</th>
                        <th>Tầng</th>
                        <th>Ngày vào</th>
                        <th>Ngày ra</th>
                        <th>Tình trạng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Phòng</th>
                        <th>Loại phòng</th>
                        <th>Tầng</th>
                        <th>Ngày vào</th>
                        <th>Ngày ra</th>
                        <th>Tình trạng</th>
                        <th>Thao tác</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.tblPhieuDatPhong.tblPhong.so_phong</td>
                            <td>@item.tblPhieuDatPhong.tblPhong.tblLoaiPhong.mo_ta</td>
                            <td>@item.tblPhieuDatPhong.tblPhong.tblTang.ten_tang</td>
                            <td>@item.tblPhieuDatPhong.ngay_vao.Value.ToShortDateString()</td>
                            <td>@item.tblPhieuDatPhong.ngay_ra.Value.ToShortDateString()</td>
                            <td><span class="badge badge-danger badge-g">@item.tblPhieuDatPhong.tblPhong.tblTinhTrangPhong.mo_ta</span></td>
                            <td>
                                <a href="@Url.Action("ThanhToan","HoaDon",new { id = item.ma_hd})"><div class="btn btn-danger badge-g">Trả phòng</div></a>
                                <a href="@Url.Action("GiaHanPhong","HoaDon",new { id = item.ma_hd})"><div class="btn btn-info badge-g">Gia Hạn</div></a>
                                <a href="@Url.Action("DoiPhong","HoaDon",new { id = item.ma_hd})"><div class="btn btn-secondary badge-g">Đổi phòng</div></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Cập nhật vào @DateTime.Now</div>
</div>

