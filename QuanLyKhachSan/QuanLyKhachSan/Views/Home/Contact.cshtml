@{
    ViewBag.Title = "Liên Hệ";
}


<header id="gtco-header" style="height: 80px;" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">

                

            </div>
        </div>
    </div>
</header>


<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12" style="margin-top: -70px;">
                <div class="col-md-6 animate-box">
                    <h3>Get In Touch</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        DataProvider.Model.tblKhachHang kh = (DataProvider.Model.tblKhachHang)Session["KH"];
                        if (kh == null)
                        {
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="name">Name</label>
                                    @*<input type="text" id="name" class="form-control" placeholder="Your firstname">*@
                                    @Html.TextBox("ho_ten", null, new { @class = "form-control", placeholder = "Your Name" })
                                </div>

                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="email">Email</label>
                                    @*<input type="text" id="email" class="form-control" placeholder="Your email address">*@
                                    @Html.TextBox("mail", null, new { @class = "form-control", placeholder = "Your email address" })
                                </div>
                            </div>
                        }

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="message">Message</label>
                                @*<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Write us something"></textarea>*@
                                @Html.TextArea("noi_dung", null, new { @class = "form-control", placeholder = "Write us something", cols = "30", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input onclick="return checkSMS()" type="submit" value="Send Message" class="btn btn-primary">
                        </div>

                    }
                </div>
                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">
                        <h3>Contact Information</h3>
                        <ul>
                            <li class="address">20 Văn Trì Nguyên xá <br> Bắc từ liêm - Hà Nội</li>
                            <li class="phone"><a href="tel://01677915896">+ 0981019704</a></li>
                            <li class="email"><a href="mailto:info@yoursite.com">admin.hotelcenter@hotel-center.com</a></li>
                            @*<li class="url"><a href="">HotelCenter.Com</a></li>*@
                        </ul>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function checkSMS() {
        var ht = $('#ho_ten');
        var mail = $('#mail');
        if (ht != null)
            if (ht.val() == "") {
                alert('Phải nhập họ tên !');
                return false;
            }
        if (mail != null)
            if (mail.val() == "") {
                alert('Phải nhập email !');
                return false;
            }
        var nd = $('#noi_dung').val();
        if (nd.length < 10) {
            alert('Nội dung quá ngắn !');
            return false;
        } else if (nd.length >= 500) {
            alert('Nội dung quá dài !');
            return false;
        }
        return true;
    }
</script>